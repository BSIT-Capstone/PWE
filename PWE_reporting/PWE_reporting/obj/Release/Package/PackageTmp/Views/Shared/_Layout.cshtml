<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - PWE Reporting</title>
    <!-- Custom CSS -->
    <link href="~/Content/freelancer.css" rel="stylesheet">
    <!-- Custom Fonts -->
    <link href="~/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css">
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />  
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>  
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/myJScripts.js" type="text/javascript"></script>
</head>
<body id="page-top" class="index">
    <!-- Navigation -->
    <nav class="navbar navbar-shrink navbar-default navbar-fixed-top">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header page-scroll">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("PWE Reporting", "Reports", "Reports", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Help", "Help", "Home")</li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>
    <!-- About Section -->

                    @RenderBody()

    <!-- Footer -->
    <footer class="text-center">
        <div class="footer-above">
            <div class="container">
                <div class="row">
                    <div class="footer-col col-md-4">
                        <h3>Location</h3>
                        <p>12600 Quivira Rd<br>Overland Park, KS 66213</p>
                    </div>
                    <div class="footer-col col-md-4">
                        <h3>Sponsors</h3>
                        <ul class="list-inline">
                            <li class="col-lg-4 col-lg-offset-2">
                                <img class="img-responsive img-rounded" src="~/img/ku_engineering.jpg" alt="">
                            </li>
                            <li class="col-lg-4">
                                <img class="img-responsive img-rounded" src="~/img/peruvian_white_logo.png" alt="">
                            </li>
                            </ul>
</div>
                    <div class="footer-col col-md-2">
                        <h3>Developer</h3>
                        <ul class="list-inline">
                            <li>
                                <img class="img-responsive img-rounded" src="~/img/profile.jpg" alt="">
                                </li>
                            </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-below">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        Copyright &copy; IT Senior Class of Fall 2015
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- Scroll to Top Button (Only visible on small and extra-small screen sizes) -->
    <div class="scroll-top page-scroll visible-xs visible-sm">
        <a class="btn btn-primary" href="#page-top">
            <i class="fa fa-chevron-up"></i>
        </a>
    </div>

    <!-- jQuery -->
    <script src="~/Scripts/jquery.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!-- Plugin JavaScript -->
    <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>
    <script src="~/Scripts//classie.js"></script>
    <!--<script src="~/Scripts/cbpAnimatedHeader.js"></script>-->
    <!-- Custom Theme JavaScript -->
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
</body>
</html>